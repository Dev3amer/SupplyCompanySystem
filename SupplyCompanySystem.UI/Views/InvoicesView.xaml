<UserControl x:Class="SupplyCompanySystem.UI.Views.InvoicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SupplyCompanySystem.UI.Views"
             xmlns:conv="clr-namespace:SupplyCompanySystem.UI.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             Background="White"
             FlowDirection="RightToLeft"
             PreviewMouseDown="UserControl_PreviewMouseDown">

    <UserControl.Resources>
        <conv:NotNullToBoolConverter x:Key="NotNullConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:StatusToStringConverter x:Key="StatusToStringConverter"/>
        <conv:StatusToColorConverter x:Key="StatusToColorConverter"/>

        <!-- Converter للأرقام -->
        <conv:DecimalInputConverter x:Key="DecimalInputConverter"/>

        <!-- Converter جديد للتحكم في إدخال الأرقام -->
        <conv:NumericInputConverter x:Key="NumericInputConverter"/>

        <Style x:Key="CenteredCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style x:Key="CenteredHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style x:Key="NoPaddingDataGrid" TargetType="DataGrid">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="Background" Value="#F5F7FA"/>
            <Setter Property="AlternatingRowBackground" Value="#FFFFFF"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="4"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Grid Background="{TemplateBinding Background}">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      Margin="0"/>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#1A5490"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="#1F618D"/>
                                <Setter Property="Foreground" Value="#1A1A1A"/>
                            </MultiTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFC107"/>
                                <Setter Property="Foreground" Value="#1A1A1A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#FFFFFF"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="MinHeight" Value="32"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFC107"/>
                                <Setter Property="Foreground" Value="#1A1A1A"/>
                            </Trigger>
                            <Trigger Property="AlternationIndex" Value="0">
                                <Setter Property="Background" Value="#FFFFFF"/>
                            </Trigger>
                            <Trigger Property="AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#34495E"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="#2C3E50"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Height" Value="32"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      RecognizesAccessKey="True"/>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- أنماط جديدة للتصميم المحسن -->
        <Style x:Key="SummaryItemStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <Style x:Key="SummaryValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,2,0,2"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="CompactTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- نمط خاص لـ TextBox للتعديل -->
        <Style x:Key="NumericTextBoxStyle" TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="FontSize" Value="11"/>
            <!-- إضافة حدث PreviewTextInput للتحكم في الإدخال -->
            <EventSetter Event="PreviewTextInput" Handler="NumericTextBox_PreviewTextInput"/>
            <EventSetter Event="PreviewKeyDown" Handler="NumericTextBox_PreviewKeyDown"/>
            <EventSetter Event="TextChanged" Handler="NumericTextBox_TextChanged"/>
            <EventSetter Event="LostFocus" Handler="NumericTextBox_LostFocus"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- شريط الأوامر العلوي -->
        <Border Grid.Row="0" Background="#F8F9FA" Padding="8,5" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="عرض أسعار جديد" Command="{Binding NewInvoiceCommand}" 
                        Background="#2ECC71" Foreground="White" Padding="10,6" 
                        FontSize="11" BorderThickness="0" Margin="0,0,5,0" 
                        Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                        ToolTip="إنشاء عرض أسعار جديد"/>
                <Button Content="حفظ عرض الأسعار" Command="{Binding SaveInvoiceCommand}" 
                        Background="#3498DB" Foreground="White" Padding="10,6" 
                        FontSize="11" BorderThickness="0" Margin="0,0,5,0" 
                        Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"
                        ToolTip="حفظ عرض الأسعار الحالي"/>
                <Button Content="إلغاء" Command="{Binding CancelCommand}" 
                        Background="#95A5A6" Foreground="White" Padding="10,6" 
                        FontSize="11" BorderThickness="0" Margin="0,0,5,0" 
                        Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"
                        ToolTip="إلغاء التعديلات"/>
                <Button Content="إكمال عرض الأسعار" Command="{Binding CompleteInvoiceCommand}" 
                        Background="#9B59B6" Foreground="White" Padding="10,6" 
                        FontSize="11" BorderThickness="0" 
                        Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                        ToolTip="إكمال عرض الأسعار وإنشاء PDF"/>
            </StackPanel>
        </Border>

        <!-- المحتوى الرئيسي -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>

            <!-- القسم الأيسر -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="180"/>
                </Grid.RowDefinitions>

                <!-- بنود الفاتورة -->
                <Border Grid.Row="0" Margin="10,10,10,5" Background="White" 
                        BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="#34495E" Padding="8">
                            <TextBlock Text="بنود عرض الأسعار" Foreground="White" 
                                       FontSize="13" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </Border>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Auto" CanContentScroll="True">
                            <DataGrid x:Name="InvoiceItemsDataGrid" 
                                      ItemsSource="{Binding InvoiceItems}" 
                                      SelectedItem="{Binding SelectedInvoiceItem, Mode=TwoWay}" 
                                      AutoGenerateColumns="False" RowHeight="32" 
                                      CanUserAddRows="False" CanUserDeleteRows="False" 
                                      IsReadOnly="False" Style="{StaticResource NoPaddingDataGrid}" 
                                      ColumnHeaderHeight="32"
                                      CellEditEnding="InvoiceItemsDataGrid_CellEditEnding"
                                      MouseDoubleClick="InvoiceItemsDataGrid_MouseDoubleClick"
                                      PreviewKeyDown="InvoiceItemsDataGrid_PreviewKeyDown">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="اسم المنتج" 
                                                        Binding="{Binding Product.Name}" 
                                                        Width="355" MinWidth="150" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                                        IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource RightAlignedCellStyle}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="السعر الأصلي" 
                                                        Binding="{Binding OriginalUnitPrice, StringFormat='0.00'}" 
                                                        Width="93" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                                        IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource CenteredCellStyle}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="مكسب %" 
                                                        Width="70" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                        <DataGridTextColumn.Binding>
                                            <Binding Path="ItemProfitMarginPercentage" 
                                                     UpdateSourceTrigger="LostFocus"
                                                     Converter="{StaticResource DecimalInputConverter}"/>
                                        </DataGridTextColumn.Binding>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource CenteredCellStyle}">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                        <DataGridTextColumn.EditingElementStyle>
                                            <Style TargetType="TextBox" BasedOn="{StaticResource NumericTextBoxStyle}">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Foreground" Value="#27AE60"/>
                                            </Style>
                                        </DataGridTextColumn.EditingElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="السعر بعد المكسب" 
                                                        Binding="{Binding UnitPrice, StringFormat='0.00'}" 
                                                        Width="110" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                                        IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource CenteredCellStyle}">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="الكمية" 
                                                        Width="60" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                        <DataGridTextColumn.Binding>
                                            <Binding Path="Quantity" 
                                                     UpdateSourceTrigger="LostFocus"
                                                     Converter="{StaticResource DecimalInputConverter}"/>
                                        </DataGridTextColumn.Binding>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource CenteredCellStyle}"/>
                                        </DataGridTextColumn.ElementStyle>
                                        <DataGridTextColumn.EditingElementStyle>
                                            <Style TargetType="TextBox" BasedOn="{StaticResource NumericTextBoxStyle}"/>
                                        </DataGridTextColumn.EditingElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="خصم %" 
                                                        Width="60" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                        <DataGridTextColumn.Binding>
                                            <Binding Path="DiscountPercentage" 
                                                     UpdateSourceTrigger="LostFocus"
                                                     Converter="{StaticResource DecimalInputConverter}"/>
                                        </DataGridTextColumn.Binding>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource CenteredCellStyle}">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                        <DataGridTextColumn.EditingElementStyle>
                                            <Style TargetType="TextBox" BasedOn="{StaticResource NumericTextBoxStyle}">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.EditingElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="الإجمالي بعد مكسب العرض" 
                                                        Binding="{Binding LineTotal, StringFormat='0.00'}" 
                                                        Width="160" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}"
                                                        IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource CenteredCellStyle}">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- أزرار التحكم في البنود -->
                <Border Grid.Row="1" Background="#F8F9FA" Padding="8" 
                        BorderThickness="0,1,0,0" BorderBrush="#E0E0E0" 
                        Margin="10,0,10,10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="🗑️ حذف منتج" Command="{Binding DeleteItemCommand}" 
                                Background="#E74C3C" Foreground="White" Padding="8,5" 
                                FontSize="10" BorderThickness="0" Margin="0,0,5,0" 
                                IsEnabled="{Binding SelectedInvoiceItem, Converter={StaticResource NotNullConverter}}" 
                                ToolTip="حذف المنتج المحدد" Height="26" Width="188"/>
                    </StackPanel>
                </Border>

                <!-- الفواتير المسودة -->
                <Border Grid.Row="2" Margin="10,5,10,10" Background="White" 
                        BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="#34495E" Padding="8" 
                                Margin="0,-5,0,0">
                            <TextBlock Text="عروض الأسعار المسودة" Foreground="White" 
                                       FontSize="13" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </Border>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Auto" CanContentScroll="True">
                            <DataGrid x:Name="InvoicesDataGrid" 
                                      ItemsSource="{Binding Invoices}" 
                                      SelectedItem="{Binding SelectedInvoiceFromList, Mode=TwoWay}" 
                                      AutoGenerateColumns="False" RowHeight="32" 
                                      CanUserAddRows="False" CanUserDeleteRows="False" 
                                      IsReadOnly="True" Style="{StaticResource NoPaddingDataGrid}" 
                                      ColumnHeaderHeight="32">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="رقم" 
                                                        Binding="{Binding Id}" 
                                                        Width="60" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource CenteredCellStyle}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="العميل" 
                                                        Binding="{Binding Customer.Name}" 
                                                        Width="198" MinWidth="120" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource RightAlignedCellStyle}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="التاريخ" 
                                                        Binding="{Binding InvoiceDate, StringFormat='yyyy/MM/dd'}" 
                                                        Width="100" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource CenteredCellStyle}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="المنتجات" 
                                                        Binding="{Binding Items.Count}" 
                                                        Width="80" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource CenteredCellStyle}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="الإجمالي" 
                                                        Binding="{Binding TotalAmount, StringFormat='0.00'}" 
                                                        Width="110" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource CenteredCellStyle}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="خصم %" 
                                                        Binding="{Binding InvoiceDiscountPercentage, StringFormat='0.00'}" 
                                                        Width="80" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource CenteredCellStyle}">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="مكسب %" 
                                                        Binding="{Binding ProfitMarginPercentage, StringFormat='0.00'}" 
                                                        Width="80" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource CenteredCellStyle}">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="النهائي" 
                                                        Binding="{Binding FinalAmount, StringFormat='0.00'}" 
                                                        Width="110" 
                                                        HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" 
                                                   BasedOn="{StaticResource CenteredCellStyle}">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTemplateColumn Header="الحالة" 
                                                            Width="90" 
                                                            HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Status, Converter={StaticResource StatusToStringConverter}}" 
                                                           Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}" 
                                                           FontWeight="Bold" VerticalAlignment="Center" 
                                                           HorizontalAlignment="Center" TextAlignment="Center" Margin="0"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                        <Border Grid.Row="2" Background="#F8F9FA" Padding="8" 
                                BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="تعديل" Command="{Binding EditInvoiceCommand}" 
                                        Background="#F39C12" Foreground="White" FontWeight="Bold" 
                                        Padding="8,5" FontSize="12" BorderThickness="0" 
                                        Margin="0,0,5,0" 
                                        IsEnabled="{Binding SelectedInvoiceFromList, Converter={StaticResource NotNullConverter}}" 
                                        Height="29" Width="58" ToolTip="تحديث البيانات وفتح للتحرير"/>
                                <Button Content="إلغاء" Command="{Binding CancelInvoiceCommand}" 
                                        Background="#E74C3C" Foreground="White" Padding="8,5" 
                                        FontWeight="Bold" FontSize="12" BorderThickness="0" 
                                        Margin="0,0,5,0" 
                                        IsEnabled="{Binding SelectedInvoiceFromList, Converter={StaticResource NotNullConverter}}" 
                                        Width="58" ToolTip="إلغاء الفاتورة المحددة"/>
                                <Button Content="حذف" Command="{Binding DeleteInvoiceCommand}" 
                                        Background="#95A5A6" Foreground="White" Padding="8,5" 
                                        FontSize="12" FontWeight="Bold" BorderThickness="0" 
                                        IsEnabled="{Binding SelectedInvoiceFromList, Converter={StaticResource NotNullConverter}}" 
                                        Width="58" ToolTip="حذف الفاتورة المحددة"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- القسم الأيمن - المعلومات والملخص -->
            <Border Grid.Column="1" Margin="10,0,10,10" Background="#F8F9FA" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- تاريخ الفاتورة -->
                        <Border Grid.Row="0" Background="White" Padding="10" 
                                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" 
                                Margin="0,0,0,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="تاريخ عرض الأسعار" 
                                           FontSize="14" FontWeight="Bold" 
                                           Foreground="#2C3E50" Margin="0,0,0,8"/>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="التاريخ:" 
                                               Foreground="#2C3E50" FontSize="12" 
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <DatePicker Grid.Column="1" 
                                                SelectedDate="{Binding SelectedInvoiceDate, UpdateSourceTrigger=PropertyChanged}" 
                                                IsEnabled="{Binding IsEditMode}" Foreground="#2C3E50" 
                                                FontSize="12" Padding="5" Margin="0,0,0,-5"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- إضافة منتج جديد -->
                        <Border Grid.Row="1" Background="White" Padding="10" 
                                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" 
                                Margin="0,0,0,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="إضافة منتج جديد" 
                                           FontSize="14" FontWeight="Bold" 
                                           Foreground="#2C3E50" Margin="0,0,0,10"/>

                                <!-- العميل -->
                                <Grid Grid.Row="1" Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="العميل:" 
                                               Foreground="#2C3E50" FontSize="12" 
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <ComboBox x:Name="CustomerComboBox" 
                                              ItemsSource="{Binding FilteredCustomersView}" 
                                              SelectedItem="{Binding SelectedCustomer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                              IsEditable="True" 
                                              Text="{Binding TempCustomerSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                              IsEnabled="{Binding IsEditMode}" 
                                              Foreground="#2C3E50" FontSize="12" 
                                              Padding="5" Height="28" 
                                              IsTextSearchEnabled="False"
                                              StaysOpenOnEdit="True"
                                              TextSearch.TextPath="Name" 
                                              SelectedValuePath="Id" 
                                              Grid.Column="1"
                                              DropDownOpened="CustomerComboBox_DropDownOpened"
                                              DropDownClosed="CustomerComboBox_DropDownClosed"
                                              PreviewKeyDown="CustomerComboBox_PreviewKeyDown"
                                              PreviewTextInput="CustomerComboBox_PreviewTextInput"
                                              SelectionChanged="CustomerComboBox_SelectionChanged"
                                              GotFocus="CustomerComboBox_GotFocus"
                                              LostFocus="CustomerComboBox_LostFocus">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="2">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontWeight="Bold" 
                                                               Margin="0,0,8,0" FontSize="11"/>
                                                    <TextBlock Text="{Binding PhoneNumber}" 
                                                               Foreground="#7F8C8D" FontSize="10"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Style.Triggers>
                                                    <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                                        <Setter Property="IsDropDownOpen" Value="True"/>
                                                    </Trigger>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="IsDropDownOpen" Value="False"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                    </ComboBox>
                                </Grid>

                                <!-- المنتج -->
                                <Grid Grid.Row="2" Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="المنتج:" 
                                               Foreground="#2C3E50" FontSize="12" 
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <ComboBox x:Name="ProductComboBox" 
                                              ItemsSource="{Binding FilteredProductsView}" 
                                              SelectedItem="{Binding SelectedProduct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                              IsEditable="True" 
                                              Text="{Binding TempProductSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                              IsEnabled="{Binding IsEditMode}" 
                                              Foreground="#2C3E50" FontSize="12" 
                                              Padding="5" Height="28" 
                                              IsTextSearchEnabled="False"
                                              StaysOpenOnEdit="True"
                                              TextSearch.TextPath="Name" 
                                              SelectedValuePath="Id" 
                                              Grid.Column="1"
                                              DropDownOpened="ProductComboBox_DropDownOpened"
                                              DropDownClosed="ProductComboBox_DropDownClosed"
                                              PreviewKeyDown="ProductComboBox_PreviewKeyDown"
                                              PreviewTextInput="ProductComboBox_PreviewTextInput"
                                              SelectionChanged="ProductComboBox_SelectionChanged"
                                              GotFocus="ProductComboBox_GotFocus"
                                              LostFocus="ProductComboBox_LostFocus" Margin="4,0,0,0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="2">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontWeight="Bold" 
                                                               Margin="0,0,8,0" FontSize="11"/>
                                                    <TextBlock Text="{Binding Price, StringFormat='0.00'}" 
                                                               Foreground="#27AE60" 
                                                               Margin="0,0,8,0" FontSize="10"/>
                                                    <TextBlock Text="{Binding Unit}" 
                                                               Foreground="#7F8C8D" FontSize="10"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Style.Triggers>
                                                    <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                                        <Setter Property="IsDropDownOpen" Value="True"/>
                                                    </Trigger>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="IsDropDownOpen" Value="False"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                    </ComboBox>
                                </Grid>

                                <!-- الكمية -->
                                <Grid Grid.Row="3" Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="الكمية:" 
                                               Foreground="#2C3E50" FontSize="12" 
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBox Grid.Column="1" Padding="5" FontSize="12" 
                                             Text="{Binding ProductQuantity, UpdateSourceTrigger=PropertyChanged}" 
                                             IsEnabled="{Binding IsEditMode}" Height="28" Margin="3,0,0,0"/>
                                </Grid>

                                <!-- مكسب المنتج -->
                                <Grid Grid.Row="4" Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="مكسب المنتج:" 
                                               Foreground="#2C3E50" FontSize="12" 
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBox Grid.Column="1" Padding="6" FontSize="12" 
                                             Text="{Binding ProductProfitMargin}" 
                                             Height="28" IsEnabled="{Binding IsEditMode}"/>
                                    <TextBlock Grid.Column="2" Text="%" 
                                               Foreground="#7F8C8D" FontSize="12" 
                                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                                </Grid>

                                <!-- خصم المنتج -->
                                <Grid Grid.Row="5" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="خصم المنتج:" 
                                               Foreground="#2C3E50" FontSize="12" 
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBox Grid.Column="1" Padding="6" FontSize="12" 
                                             Text="{Binding ProductDiscount}" 
                                             Height="28" IsEnabled="{Binding IsEditMode}" Margin="8,0,0,0"/>
                                    <TextBlock Grid.Column="2" Text="%" 
                                               Foreground="#7F8C8D" FontSize="12" 
                                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                                </Grid>

                                <!-- زر الإضافة -->
                                <Button Grid.Row="6" Content="➕ إضافة المنتج" 
                                        Command="{Binding AddItemCommand}" 
                                        Background="#27AE60" Foreground="White" 
                                        Padding="10,5" FontSize="13" BorderThickness="0" 
                                        HorizontalAlignment="Stretch" Height="32"
                                        IsEnabled="{Binding IsEditMode}"/>
                            </Grid>
                        </Border>

                        <!-- ملخص الفاتورة التفصيلي - التصميم المحسن -->
                        <Border Grid.Row="2" Background="White" Padding="10" 
                                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5"
                                MinHeight="400">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- العنوان -->
                                <TextBlock Grid.Row="0" Text="📊 ملخص عرض الأسعار التفصيلي" 
                                           FontSize="14" FontWeight="Bold" 
                                           Foreground="#2C3E50" Margin="0,0,0,12" 
                                           HorizontalAlignment="Center"/>

                                <!-- الخط الفاصل -->
                                <Rectangle Grid.Row="1" Height="1" Fill="#34495E" 
                                           Margin="0,0,0,12"/>

                                <!-- مكسب الفاتورة -->
                                <Grid Grid.Row="2" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="📈 نسبة المكسب:" 
                                               Foreground="#2C3E50" FontSize="12" 
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBox Grid.Column="1" 
                                             Style="{StaticResource CompactTextBox}"
                                             Text="{Binding ProfitMarginPercentage, UpdateSourceTrigger=PropertyChanged}" 
                                             IsEnabled="{Binding IsEditMode}" 
                                             Background="#F0F4F8"/>
                                    <TextBlock Grid.Column="2" Text="%" 
                                               Foreground="#7F8C8D" FontSize="12" 
                                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                                </Grid>

                                <!-- خصم الفاتورة -->
                                <Grid Grid.Row="3" Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="🏷️ نسبة الخصم:" 
                                               Foreground="#2C3E50" FontSize="12" 
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBox Grid.Column="1" 
                                             Style="{StaticResource CompactTextBox}"
                                             Text="{Binding InvoiceDiscountPercentage, UpdateSourceTrigger=PropertyChanged}" 
                                             IsEnabled="{Binding IsEditMode}" 
                                             Background="#F0F4F8" Margin="8,0,0,0"/>
                                    <TextBlock Grid.Column="2" Text="%" 
                                               Foreground="#7F8C8D" FontSize="12" 
                                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                                </Grid>

                                <!-- الخط الفاصل -->
                                <Rectangle Grid.Row="4" Height="1" Fill="#34495E" 
                                           Margin="0,0,0,12"/>

                                <!-- التفاصيل المالية في StackPanel مع ScrollViewer -->
                                <ScrollViewer Grid.Row="5" VerticalScrollBarVisibility="Auto" 
                                              HorizontalScrollBarVisibility="Disabled"
                                              MaxHeight="300">
                                    <StackPanel>
                                        <!-- الإجماليات الأساسية -->
                                        <Grid Margin="0,0,0,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="إجمالي المنتجات:" 
                                                       Style="{StaticResource SummaryItemStyle}" 
                                                       />
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding TotalBeforeDiscount, StringFormat='0.00'}" 
                                                       Style="{StaticResource SummaryValueStyle}" 
                                                       />
                                        </Grid>

                                        <Grid Margin="0,0,0,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="مكسب المنتجات:" 
                                                       Style="{StaticResource SummaryItemStyle}" 
                                                       Foreground="#27AE60"/>
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding TotalProductProfit, StringFormat='+0.00'}" 
                                                       Style="{StaticResource SummaryValueStyle}" 
                                                       Foreground="#27AE60"/>
                                        </Grid>

                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="خصم المنتجات:" 
                                                       Style="{StaticResource SummaryItemStyle}" 
                                                       Foreground="#E74C3C"/>
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding TotalItemsDiscount, StringFormat='-0.00'}" 
                                                       Style="{StaticResource SummaryValueStyle}" 
                                                       Foreground="#E74C3C"/>
                                        </Grid>

                                        <!-- خط فاصل -->
                                        <Rectangle Height="1" Fill="#BDC3C7" Margin="0,0,0,8"/>

                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="المجموع:" 
                                                       FontSize="13" FontWeight="Bold" 
                                                       VerticalAlignment="Center" 
                                                       />
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding SubTotalAfterItemsDiscount, StringFormat='0.00'}" 
                                                       FontSize="13" FontWeight="Bold" 
                                                       Style="{StaticResource SummaryValueStyle}" 
                                                       />
                                        </Grid>

                                        <Grid Margin="0,0,0,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="مكسب عرض الأسعار:" 
                                                       Style="{StaticResource SummaryItemStyle}" 
                                                       Foreground="#27AE60"/>
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding TotalInvoiceProfit, StringFormat='+0.00'}" 
                                                       Style="{StaticResource SummaryValueStyle}" 
                                                       Foreground="#27AE60"/>
                                        </Grid>

                                        <Grid Margin="0,0,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="32*"/>
                                                <ColumnDefinition Width="77*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="خصم عرض الأسعار:" 
                                                       Style="{StaticResource SummaryItemStyle}" 
                                                       Foreground="#E74C3C" Grid.ColumnSpan="2"/>
                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding InvoiceDiscountAmount, StringFormat='-0.00'}" 
                                                       Style="{StaticResource SummaryValueStyle}" 
                                                       Foreground="#E74C3C" HorizontalAlignment="Left" Margin="100,0,0,0"/>
                                        </Grid>
                                    </StackPanel>
                                </ScrollViewer>

                                <!-- الإجمالي النهائي -->
                                <Border Grid.Row="6" Margin="0,12,0,0" 
                                        Background="#34495E" Padding="10,8" CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="💰 الإجمالي النهائي:" 
                                                   FontSize="14" FontWeight="Bold" 
                                                   Foreground="White"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding FinalAmountCalculated, StringFormat='0.00'}" 
                                                   FontSize="14" FontWeight="Bold" 
                                                   Foreground="#2ECC71" 
                                                   Margin="8,0,0,0"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>