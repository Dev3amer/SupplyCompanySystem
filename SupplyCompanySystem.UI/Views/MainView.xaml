<Window x:Class="SupplyCompanySystem.UI.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="نظام إدارة شركة التوريد" 
        Height="850" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        TextOptions.TextRenderingMode="Auto"
        FlowDirection="RightToLeft"
        

    MinHeight="850"
        MinWidth="1400">

    <DockPanel>
        <!-- Top Bar -->
        <Border DockPanel.Dock="Top" Background="#2C3E50" Height="60" Padding="20,0">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Column="0"
                           Text="نظام إدارة شركة التوريد"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <!-- User Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Clock -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                        <TextBlock Text="🕐" FontSize="18" Margin="0,0,5,0"/>
                        <TextBlock x:Name="ClockTextBlock"
                                   Text="12:00 AM"
                                   Foreground="White"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Separator -->
                    <Rectangle Width="1" Height="25" Fill="#34495E" Margin="0,0,15,0"/>

                    <!-- User Name -->
                    <TextBlock Text="Admin"
                               Foreground="White"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                    <!-- Logout Button -->
                    <Button Content="تسجيل الخروج"
                            Background="#E74C3C"
                            Foreground="White"
                            Padding="12,6"
                            FontSize="12"
                            Cursor="Hand"
                            BorderThickness="0"
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom" Background="#34495E" Height="35" Padding="20,0">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="جاهز"
                           Foreground="#ECF0F1"
                           FontSize="12"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="الإصدار 1.0.0"
                           Foreground="#95A5A6"
                           FontSize="11"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Navigation Menu -->
            <Border Grid.Column="0" Background="#34495E">
                <StackPanel Orientation="Vertical" FlowDirection="LeftToRight">
                    <!-- Menu Items - FlowDirection LeftToRight for icon on left side -->
                    <Button x:Name="NewInvoiceBtn"
                            Content="📄 الفواتير الجديدة"
                            Background="Transparent"
                            Foreground="White"
                            Padding="15,15"
                            FontSize="14"
                            HorizontalContentAlignment="Right"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="NavButton_Click"
                            Tag="NewInvoice"
                            FlowDirection="LeftToRight"/>

                    <Button Content="👥 العملاء"
                            Background="Transparent"
                            Foreground="White"
                            Padding="15,15"
                            FontSize="14"
                            HorizontalContentAlignment="Right"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="NavButton_Click"
                            Tag="Customers"
                            FlowDirection="LeftToRight"/>

                    <Button Content="📦 المنتجات"
                            Background="Transparent"
                            Foreground="White"
                            Padding="15,15"
                            FontSize="14"
                            HorizontalContentAlignment="Right"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="NavButton_Click"
                            Tag="Products"
                            FlowDirection="LeftToRight"/>

                    <Button Content="📊 التقارير"
                            Background="Transparent"
                            Foreground="White"
                            Padding="15,15"
                            FontSize="14"
                            HorizontalContentAlignment="Right"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="NavButton_Click"
                            Tag="Reports"
                            FlowDirection="LeftToRight"/>

                    <Button Content="⚙️ الإعدادات"
                            Background="Transparent"
                            Foreground="White"
                            Padding="15,15"
                            FontSize="14"
                            HorizontalContentAlignment="Right"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="NavButton_Click"
                            Tag="Settings"
                            FlowDirection="LeftToRight"/>
                </StackPanel>
            </Border>

            <!-- Right Content Area -->
            <Border Grid.Column="1" Background="White" Margin="10">
                <ContentControl x:Name="ContentArea">
                    <!-- Default Welcome Content -->
                    <Grid>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="مرحباً بك في نظام إدارة شركة التوريد"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       TextAlignment="Center"
                                       Margin="0,0,0,20"/>
                            <TextBlock Text="اختر من القائمة على اليسار للبدء"
                                       FontSize="16"
                                       Foreground="#7F8C8D"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </ContentControl>
            </Border>
        </Grid>
    </DockPanel>
</Window>
