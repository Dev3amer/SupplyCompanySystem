<UserControl x:Class="SupplyCompanySystem.UI.Views.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SupplyCompanySystem.UI.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             Background="White"
             FlowDirection="RightToLeft">

    <UserControl.Resources>
        <local:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:NotNullToBoolConverter x:Key="NotNullConverter"/>

        <!-- أنماط جديدة مشابهة لـ ProductsView -->
        <Style x:Key="CenteredCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style x:Key="CenteredHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style x:Key="NoPaddingDataGrid" TargetType="DataGrid">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="Background" Value="#F5F7FA"/>
            <Setter Property="AlternatingRowBackground" Value="#FFFFFF"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="4"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Grid Background="{TemplateBinding Background}">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      Margin="0"/>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#1A5490"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="#1F618D"/>
                                <Setter Property="Foreground" Value="#1A1A1A"/>
                            </MultiTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFC107"/>
                                <Setter Property="Foreground" Value="#1A1A1A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#FFFFFF"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="MinHeight" Value="32"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFC107"/>
                                <Setter Property="Foreground" Value="#1A1A1A"/>
                            </Trigger>
                            <Trigger Property="AlternationIndex" Value="0">
                                <Setter Property="Background" Value="#FFFFFF"/>
                            </Trigger>
                            <Trigger Property="AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#34495E"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="#2C3E50"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Height" Value="32"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      RecognizesAccessKey="True"/>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CompactTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
        </Style>

        <Style x:Key="CompactComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
        </Style>

        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinWidth" Value="90"/>
        </Style>

        <!-- نمط جديد للـ StackPanel في النموذج -->
        <Style x:Key="FormRowStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <Border Grid.Row="0" Background="#F8F9FA" Padding="8,10" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="🔍 البحث:" Foreground="#2C3E50" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" Padding="6" FontSize="12" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource CompactTextBox}" Height="28"/>

                <Button Grid.Column="2" Content="🗑️ مسح البحث" Command="{Binding ClearSearchCommand}" 
                        Background="#95A5A6" Foreground="White" Padding="8,5" FontSize="11" 
                        BorderThickness="0" Margin="10,0,0,0" Height="28"/>

                <!-- ✅ Checkbox لعرض العملاء المعطّلة -->
                <CheckBox Grid.Column="3" Content="👁️ عرض المعطّلين" IsChecked="{Binding ShowInactiveCustomers}" 
                          Foreground="#2C3E50" FontSize="12" VerticalAlignment="Center" Margin="0,0,20,0" 
                          HorizontalAlignment="Right"/>

                <TextBlock Grid.Column="4" Text="{Binding TotalCustomersText}" Foreground="#2C3E50" FontSize="12" 
                           VerticalAlignment="Center" TextAlignment="Right" Margin="0,0,20,0"/>

                <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="📊 تصدير Excel" Background="#27AE60" Foreground="White" Padding="10,6" 
                            FontSize="11" BorderThickness="0" Margin="0,0,5,0" Click="ExportToExcel_Click"/>
                    <Button Content="📄 تصدير PDF" Background="#E74C3C" Foreground="White" Padding="10,6" 
                            FontSize="11" BorderThickness="0" Margin="0,0,5,0" Click="ExportToPdf_Click"/>
                    <Button Content="📝 تصدير CSV" Background="#F39C12" Foreground="White" Padding="10,6" 
                            FontSize="11" BorderThickness="0" Click="ExportToCsv_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- جدول العملاء - نفس تصميم المنتجات -->
        <Border Grid.Row="1" Margin="10" Background="White" 
                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="#34495E" Padding="8">
                    <TextBlock Text="👥 قائمة العملاء" Foreground="White" 
                               FontSize="13" FontWeight="Bold" HorizontalAlignment="Center"/>
                </Border>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto" CanContentScroll="True">
                    <DataGrid x:Name="CustomersDataGrid"
                              ItemsSource="{Binding Customers}"
                              SelectedItem="{Binding SelectedCustomer}"
                              AutoGenerateColumns="False" RowHeight="32" 
                              CanUserAddRows="False" CanUserDeleteRows="False" 
                              IsReadOnly="True" Style="{StaticResource NoPaddingDataGrid}" 
                              ColumnHeaderHeight="32">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="رقم العميل" 
                                                Binding="{Binding Id}" 
                                                Width="80" 
                                                HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" 
                                           BasedOn="{StaticResource CenteredCellStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="اسم العميل" 
                                                Binding="{Binding Name}" 
                                                Width="220" 
                                                HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" 
                                           BasedOn="{StaticResource RightAlignedCellStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="رقم التليفون" 
                                                Binding="{Binding PhoneNumber}" 
                                                Width="130" 
                                                HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" 
                                           BasedOn="{StaticResource CenteredCellStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="العنوان" 
                                                Binding="{Binding Address}" 
                                                Width="300" 
                                                HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" 
                                           BasedOn="{StaticResource RightAlignedCellStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="تاريخ الإنشاء" 
                                                Binding="{Binding CreatedDate, StringFormat='yyyy-MM-dd'}" 
                                                Width="120" 
                                                HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" 
                                           BasedOn="{StaticResource CenteredCellStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="الحالة" 
                                                    Width="100" 
                                                    HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}" 
                                                CornerRadius="3" Padding="4,2" Margin="2">
                                            <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}}" 
                                                       Foreground="White" 
                                                       FontWeight="Bold" 
                                                       VerticalAlignment="Center" 
                                                       HorizontalAlignment="Center" 
                                                       TextAlignment="Center" 
                                                       FontSize="10"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Pagination Bar -->
        <Border Grid.Row="2" Background="#F8F9FA" Padding="10" 
                BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- معلومات التصفية على اليسار -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="{Binding TotalCustomersText}" 
                               Foreground="#2C3E50" FontSize="12" 
                               VerticalAlignment="Center" Margin="10,0"/>
                </StackPanel>

                <!-- تحكم Pagination في الوسط -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Previous Page -->
                    <Button Command="{Binding PreviousPageCommand}" 
                            Content="◀️ السابق" 
                            ToolTip="الصفحة السابقة"
                            Background="#3498DB" Foreground="White" 
                            Padding="8,4" FontSize="11" 
                            BorderThickness="0" Width="90" Height="32"
                            Margin="0,0,5,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Background" Value="#3498DB"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanGoToPreviousPage}" Value="False">
                                        <Setter Property="Background" Value="#95A5A6"/>
                                        <Setter Property="Foreground" Value="#BDC3C7"/>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Page Info -->
                    <TextBlock Text="{Binding PaginationText}" 
                               Foreground="#2C3E50" FontSize="12" 
                               VerticalAlignment="Center" Margin="10,0"/>

                    <!-- Next Page -->
                    <Button Command="{Binding NextPageCommand}" 
                            Content="▶️ التالي" 
                            ToolTip="الصفحة التالية"
                            Background="#3498DB" Foreground="White" 
                            Padding="8,4" FontSize="11" 
                            BorderThickness="0" Width="90" Height="32"
                            Margin="5,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Background" Value="#3498DB"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanGoToNextPage}" Value="False">
                                        <Setter Property="Background" Value="#95A5A6"/>
                                        <Setter Property="Foreground" Value="#BDC3C7"/>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- حجم الصفحة على اليمين -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="الحجم:" 
                               Foreground="#2C3E50" FontSize="12" 
                               VerticalAlignment="Center" Margin="0,0,5,0"/>

                    <ComboBox Width="70" Height="28" 
                              SelectedItem="{Binding PageSize, UpdateSourceTrigger=PropertyChanged}" 
                              Foreground="#2C3E50" FontSize="11" 
                              VerticalAlignment="Center" HorizontalAlignment="Center"
                              Background="#F8F9FA" BorderThickness="1" BorderBrush="#BDC3C7"
                              Margin="0,0,10,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">5</sys:Int32>
                        <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">10</sys:Int32>
                        <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">15</sys:Int32>
                        <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">20</sys:Int32>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Form and Buttons - منظمة أفقيًا مع تحسين المحاذاة -->
        <Border Grid.Row="3" Background="White" Padding="15" Margin="10,0,10,10"
                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- عنوان القسم -->
                <Border Grid.Row="0" Background="#34495E" Padding="8" CornerRadius="3"
                        Margin="0,0,0,15">
                    <TextBlock Text="👤 إدارة العميل" 
                               FontSize="14" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center"/>
                </Border>

                <!-- نموذج العميل - منظم بشكل احترافي -->
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- الصف الأول: الاسم ورقم الهاتف -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- اسم العميل -->
                        <Grid Grid.Column="0" Margin="0,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="اسم العميل:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Grid.Column="1" Padding="6" FontSize="12" 
                                     Text="{Binding Name}" 
                                     Style="{StaticResource CompactTextBox}"
                                     IsEnabled="{Binding IsEditMode}"
                                     Margin="8,0,0,0"/>
                        </Grid>

                        <!-- رقم الهاتف -->
                        <Grid Grid.Column="1" Margin="10,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="رقم الهاتف:" 
                                       Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Grid.Column="1" Padding="6" FontSize="12" 
                                     Text="{Binding PhoneNumber}" 
                                     Style="{StaticResource CompactTextBox}"
                                     IsEnabled="{Binding IsEditMode}"
                                     Margin="8,0,0,0"/>
                        </Grid>
                    </Grid>

                    <!-- الصف الثاني: العنوان -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="العنوان:" 
                                   Style="{StaticResource FormLabelStyle}"
                                   VerticalAlignment="Top" 
                                   Margin="0,8,8,0"/>
                        <TextBox Grid.Column="1" Padding="6" FontSize="12" 
                                 Text="{Binding Address}" 
                                 Height="60" TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 Style="{StaticResource CompactTextBox}"
                                 IsEnabled="{Binding IsEditMode}"/>
                    </Grid>
                </Grid>

                <!-- الأزرار - منظمة بشكل احترافي -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- ✅ زرار الإضافة -->
                    <Button x:Name="AddBtn" Content="➕ إضافة" 
                            Command="{Binding AddCommand}" 
                            Background="#27AE60" 
                            Foreground="White" 
                            Padding="14,8" 
                            FontSize="12" 
                            FontWeight="Bold"
                            BorderThickness="0" 
                            Width="85" Height="36"
                            Cursor="Hand"
                            Margin="0,0,8,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Background" Value="#27AE60"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                        <Setter Property="Background" Value="#95A5A6"/>
                                        <Setter Property="Foreground" Value="#BDC3C7"/>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- ✅ زرار التعديل -->
                    <Button x:Name="EditBtn" Content="✏️ تعديل" 
                            Command="{Binding EditCommand}" 
                            Background="#3498DB" 
                            Foreground="White" 
                            Padding="14,8" 
                            FontSize="12" 
                            FontWeight="Bold"
                            BorderThickness="0" 
                            IsEnabled="{Binding SelectedCustomer, Converter={StaticResource NotNullConverter}}"
                            Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                            Width="85" Height="36"
                            Cursor="Hand"
                            Margin="0,0,8,0"/>

                    <!-- ✅ زرار التعطيل -->
                    <Button x:Name="DeleteBtn" Content="⛔ تعطيل" 
                            Command="{Binding DeleteCommand}" 
                            Background="#E74C3C" 
                            Foreground="White" 
                            Padding="14,8" 
                            FontSize="12" 
                            FontWeight="Bold"
                            BorderThickness="0" 
                            IsEnabled="{Binding SelectedCustomer, Converter={StaticResource NotNullConverter}}"
                            Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                            Width="90" Height="36"
                            Cursor="Hand"
                            Margin="0,0,8,0"/>

                    <!-- ✅ زرار الاسترجاع -->
                    <Button x:Name="RestoreBtn" Content="🔄 استرجاع" 
                            Command="{Binding RestoreCommand}" 
                            Background="#27AE60" 
                            Foreground="White" 
                            Padding="14,8" 
                            FontSize="12" 
                            FontWeight="Bold"
                            BorderThickness="0" 
                            IsEnabled="{Binding SelectedCustomer, Converter={StaticResource NotNullConverter}}"
                            Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                            Width="100" Height="36"
                            Cursor="Hand"
                            Margin="0,0,8,0"/>

                    <!-- ✅ زرار الحفظ -->
                    <Button x:Name="SaveBtn" Content="💾 حفظ" 
                            Command="{Binding SaveCommand}" 
                            Background="#2ECC71" 
                            Foreground="White" 
                            Padding="14,8" 
                            FontSize="12" 
                            FontWeight="Bold"
                            BorderThickness="0" 
                            Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"
                            Width="85" Height="36"
                            Cursor="Hand"
                            Margin="0,0,8,0"/>

                    <!-- ✅ زرار الإلغاء -->
                    <Button x:Name="CancelBtn" Content="❌ إلغاء" 
                            Command="{Binding CancelCommand}" 
                            Background="#95A5A6" 
                            Foreground="White" 
                            Padding="14,8" 
                            FontSize="12" 
                            FontWeight="Bold"
                            BorderThickness="0"
