<UserControl x:Class="SupplyCompanySystem.UI.Views.InvoiceArchiveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SupplyCompanySystem.UI.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Background="White"
             FlowDirection="RightToLeft">

    <UserControl.Resources>
        <local:NotNullToBoolConverter x:Key="NotNullConverter"/>

        <!-- ✅ ستايل موحد للأزرار الأساسية -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- ✅ ستايل للأزرار الإضافية -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ============ فلتر ============ -->
        <Border Grid.Row="0" Background="#F8F9FA" Padding="15" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- من التاريخ -->
                <TextBlock Grid.Column="0" Text="من التاريخ:" Foreground="#2C3E50" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker Grid.Column="1" 
                            SelectedDate="{Binding FromDate}" 
                            Foreground="#2C3E50" 
                            FontSize="12" 
                            Padding="8" 
                            Margin="0,0,15,0"
                            DisplayDateEnd="{x:Static sys:DateTime.Today}"/>

                <!-- إلى التاريخ -->
                <TextBlock Grid.Column="2" Text="إلى التاريخ:" Foreground="#2C3E50" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker Grid.Column="3" 
                            SelectedDate="{Binding ToDate}" 
                            Foreground="#2C3E50" 
                            FontSize="12" 
                            Padding="8" 
                            Margin="0,0,15,0"
                            DisplayDateEnd="{x:Static sys:DateTime.Today}"/>

                <!-- العميل -->
                <TextBlock Grid.Column="4" Text="العميل:" Foreground="#2C3E50" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="5" ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer}" DisplayMemberPath="Name" Foreground="#2C3E50" FontSize="12" Padding="8" Margin="0,0,15,0"/>

                <!-- المبلغ من -->
                <TextBlock Grid.Column="6" Text="المبلغ من:" Foreground="#2C3E50" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="7" Text="{Binding MinAmount, UpdateSourceTrigger=PropertyChanged}" Foreground="#2C3E50" FontSize="12" Padding="8" Margin="0,0,15,0"/>

                <!-- أزرار البحث والتصفية -->
                <StackPanel Grid.Column="9" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="بحث" Command="{Binding SearchCommand}" Background="#3498DB" Foreground="White" Padding="12,8" FontSize="11" BorderThickness="0" Margin="0,0,5,0"/>
                    <Button Content="إعادة تعيين" Command="{Binding ResetFilterCommand}" Background="#95A5A6" Foreground="White" Padding="12,8" FontSize="11" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ============ جدول الفواتير ============ -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding CompletedInvoices}"
                  SelectedItem="{Binding SelectedInvoice}"
                  AutoGenerateColumns="False"
                  RowHeight="40"
                  Margin="15"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="رقم الفاتورة" Binding="{Binding Id}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="اسم العميل" Binding="{Binding Customer.Name}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="التاريخ" Binding="{Binding InvoiceDate, StringFormat='yyyy/MM/dd'}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="الإجمالي قبل الخصم" Binding="{Binding TotalAmount, StringFormat='0.00'}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="الخصم" Binding="{Binding TotalDiscount, StringFormat='0.00'}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="الإجمالي النهائي" Binding="{Binding FinalAmount, StringFormat='0.00'}" Width="150" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ============ الأزرار ============ -->
        <Border Grid.Row="2" Background="#F8F9FA" Padding="15" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ✅ الأزرار الإضافية (تظهر عند تحديد فاتورة) -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- تصدير PDF للفاتورة المحددة -->
                    <Button Content="📄 تصدير PDF" 
                            Command="{Binding ExportPdfCommand}" 
                            Background="#3498DB" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            IsEnabled="{Binding SelectedInvoice, Converter={StaticResource NotNullConverter}}"/>

                    <!-- تصدير PDF بدون أسعار للفاتورة المحددة -->
                    <Button Content="📄 تصدير PDF بدون أسعار" 
                            Command="{Binding ExportPdfWithoutPricesCommand}" 
                            Background="#F39C12" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            IsEnabled="{Binding SelectedInvoice, Converter={StaticResource NotNullConverter}}"/>
                </StackPanel>

                <!-- ✅ الأزرار الأساسية (دائماً ظاهرة) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- تصدير Excel للفواتير المفلترة -->
                    <Button Content="📥 تصدير إكسل" 
                            Command="{Binding ExportExcelCommand}" 
                            Background="#27AE60" 
                            Style="{StaticResource PrimaryButtonStyle}"/>

                    <!-- طباعة PDF للفواتير المفلترة -->
                    <Button Content="🖨️ طباعة PDF" 
                            Command="{Binding PrintPdfCommand}" 
                            Background="#9B59B6" 
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>