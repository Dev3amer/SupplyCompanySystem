<UserControl x:Class="SupplyCompanySystem.UI.Views.InvoiceArchiveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SupplyCompanySystem.UI.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Background="White"
             FlowDirection="RightToLeft"
             PreviewMouseDown="UserControl_PreviewMouseDown">

    <UserControl.Resources>
        <local:NotNullToBoolConverter x:Key="NotNullConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- ✅ ستايل موحد للأزرار الأساسية -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- ✅ ستايل للأزرار الإضافية -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- ✅ ستايل لأزرار Pagination -->
        <Style x:Key="PaginationButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <!-- ✅ ستايل لأزرار التصدير الأساسية -->
        <Style x:Key="ExportButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- ✅ ستايل لعناصر Pagination -->
        <Style x:Key="PaginationTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <!-- ✅ ستايل لـ ComboBox حجم الصفحة -->
        <Style x:Key="PageSizeComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- ✅ أنماط الجدول مثل صفحة المنتجات -->
        <Style x:Key="CenteredCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style x:Key="RightAlignedCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style x:Key="CenteredHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style x:Key="NoPaddingDataGrid" TargetType="DataGrid">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="Background" Value="#F5F7FA"/>
            <Setter Property="AlternatingRowBackground" Value="#FFFFFF"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="4"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Grid Background="{TemplateBinding Background}">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      Margin="0"/>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#1A5490"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="#1F618D"/>
                                <Setter Property="Foreground" Value="#1A1A1A"/>
                            </MultiTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFC107"/>
                                <Setter Property="Foreground" Value="#1A1A1A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#FFFFFF"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="MinHeight" Value="32"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFC107"/>
                                <Setter Property="Foreground" Value="#1A1A1A"/>
                            </Trigger>
                            <Trigger Property="AlternationIndex" Value="0">
                                <Setter Property="Background" Value="#FFFFFF"/>
                            </Trigger>
                            <Trigger Property="AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#34495E"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="#2C3E50"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Height" Value="32"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      RecognizesAccessKey="True"/>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ✅ نمط بسيط لـ Border -->
        <Style x:Key="TableBorderStyle" TargetType="Border">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ============ فلتر ============ -->
        <Border Grid.Row="0" Background="#F8F9FA" Padding="15" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- من التاريخ -->
                <TextBlock Grid.Column="0" Text="من التاريخ:" Foreground="#2C3E50" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker Grid.Column="1" 
                            SelectedDate="{Binding FromDate}" 
                            Foreground="#2C3E50" 
                            FontSize="12" 
                            Padding="8" 
                            Margin="0,0,15,0"
                            DisplayDateEnd="{x:Static sys:DateTime.Today}"/>

                <!-- إلى التاريخ -->
                <TextBlock Grid.Column="2" Text="إلى التاريخ:" Foreground="#2C3E50" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker Grid.Column="3" 
                            SelectedDate="{Binding ToDate}" 
                            Foreground="#2C3E50" 
                            FontSize="12" 
                            Padding="8" 
                            Margin="0,0,15,0"
                            DisplayDateEnd="{x:Static sys:DateTime.Today}"/>

                <!-- العميل -->
                <TextBlock Grid.Column="4" Text="العميل:" Foreground="#2C3E50" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="5" ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer}" DisplayMemberPath="Name" Foreground="#2C3E50" FontSize="12" Padding="8" Margin="0,0,15,0"/>

                <!-- المبلغ من -->
                <TextBlock Grid.Column="6" Text="المبلغ من:" Foreground="#2C3E50" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="7" Text="{Binding MinAmount, UpdateSourceTrigger=PropertyChanged}" Foreground="#2C3E50" FontSize="12" Padding="8" Margin="0,0,15,0"/>

                <!-- أزرار البحث والتصفية -->
                <StackPanel Grid.Column="9" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="🔍 بحث" Command="{Binding SearchCommand}" Background="#3498DB" Foreground="White" Padding="12,8" FontSize="11" BorderThickness="0" Margin="0,0,5,0" Cursor="Hand"/>
                    <Button Content="🔄 إعادة تعيين" Command="{Binding ResetFilterCommand}" Background="#95A5A6" Foreground="White" Padding="12,8" FontSize="11" BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ============ جدول الفواتير - محاط بحدود مثل صفحة المنتجات ============ -->
        <Border Grid.Row="1" Style="{StaticResource TableBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- رأس الجدول بلون أزرق داكن مثل صفحة المنتجات -->
                <Border Grid.Row="0" Background="#34495E" Padding="8">
                    <TextBlock Text="📋 الأرشيف - عروض الأسعار المكتملة" 
                               Foreground="White" 
                               FontSize="13" FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                </Border>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto" CanContentScroll="True">
                    <DataGrid x:Name="ArchiveDataGrid"
                              ItemsSource="{Binding CompletedInvoices}"
                              SelectedItem="{Binding SelectedInvoice, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              RowHeight="32"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              Style="{StaticResource NoPaddingDataGrid}"
                              ColumnHeaderHeight="32"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              PreviewMouseDown="DataGrid_PreviewMouseDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="رقم مسلسل" 
                                                Binding="{Binding Id}" 
                                                Width="100"
                                                HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredCellStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="اسم العميل" 
                                                Binding="{Binding Customer.Name}" 
                                                Width="170"
                                                HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource RightAlignedCellStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="التاريخ" 
                                                Binding="{Binding InvoiceDate, StringFormat='yyyy/MM/dd'}" 
                                                Width="140"
                                                HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredCellStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="تاريخ الإكمال" 
                                                Width="160"
                                                HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="CompletedDate" StringFormat="yyyy/MM/dd HH:mm">
                                        <Binding.TargetNullValue>
                                            <sys:String>--</sys:String>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredCellStyle}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="الإجمالي قبل" 
                                                Binding="{Binding TotalAmount, StringFormat='0.00'}" 
                                                Width="130"
                                                HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredCellStyle}">
                                        <Setter Property="Foreground" Value="#27AE60"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="الخصم" 
                                                Binding="{Binding InvoiceDiscountAmount, StringFormat='0.00'}" 
                                                Width="100"
                                                HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredCellStyle}">
                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="الإجمالي النهائي" 
                                                Binding="{Binding FinalAmount, StringFormat='0.00'}" 
                                                Width="140"
                                                HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredCellStyle}">
                                        <Setter Property="Foreground" Value="#2980B9"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="الحالة" 
                                                Width="90"
                                                HeaderStyle="{StaticResource CenteredHeaderStyle}">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="Status">
                                        <Binding.Converter>
                                            <local:StatusToStringConverter/>
                                        </Binding.Converter>
                                    </Binding>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredCellStyle}">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- ============ Pagination ============ -->
        <Border Grid.Row="2" Background="#F8F9FA" Padding="10" 
                BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ⭐ معلومات Pagination اليسرى -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="{Binding TotalCountText}" 
                               Style="{StaticResource PaginationTextStyle}"
                               Margin="10,0"/>

                    <!-- مؤشر التحميل -->
                    <Border Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                            Margin="10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏳ جاري التحميل..." 
                                       Foreground="#3498DB"
                                       FontSize="11"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- ⭐ تحكم Pagination في الوسط -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- First Page -->
                    <Button Command="{Binding FirstPageCommand}" 
                            Content="⏮️ الأولى" 
                            ToolTip="الذهاب للصفحة الأولى"
                            Style="{StaticResource PaginationButtonStyle}"/>

                    <!-- Previous Page -->
                    <Button Command="{Binding PreviousPageCommand}" 
                            Content="◀️ السابق" 
                            ToolTip="الصفحة السابقة"
                            Style="{StaticResource PaginationButtonStyle}"
                            Margin="5,0"/>

                    <!-- Page Info -->
                    <TextBlock Text="{Binding PaginationText}" 
                               Style="{StaticResource PaginationTextStyle}"
                               Margin="10,0"/>

                    <!-- Next Page -->
                    <Button Command="{Binding NextPageCommand}" 
                            Content="▶️ التالي" 
                            ToolTip="الصفحة التالية"
                            Style="{StaticResource PaginationButtonStyle}"
                            Margin="5,0"/>

                    <!-- Last Page -->
                    <Button Command="{Binding LastPageCommand}" 
                            Content="⏭️ الأخيرة" 
                            ToolTip="الذهاب للصفحة الأخيرة"
                            Style="{StaticResource PaginationButtonStyle}"/>
                </StackPanel>

                <!-- ⭐ حجم الصفحة على اليمين -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="الحجم:" 
                               Style="{StaticResource PaginationTextStyle}"
                               Margin="0,0,5,0"/>

                    <ComboBox ItemsSource="{Binding AvailablePageSizes}" 
                              SelectedItem="{Binding PageSize}"
                              Style="{StaticResource PageSizeComboBoxStyle}"
                              Margin="0,0,10,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ============ الأزرار الأساسية ============ -->
        <Border Grid.Row="3" Background="#F8F9FA" Padding="15" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ⭐ الأزرار الفردية على اليسار -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">

                    <!-- زر إعادة إلى المسودة -->
                    <Button Content="↩️ إعادة إلى المسودة" 
                            Command="{Binding ReturnToDraftCommand}" 
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Setter Property="Width" Value="180"/>
                                <Setter Property="Height" Value="36"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Cursor" Value="No"/>
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="IsEnabled" Value="False"/>
                                <Setter Property="ToolTip" Value="حدد عرض أسعار مكتمل أولاً"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SelectedInvoice, Converter={StaticResource NotNullConverter}}" Value="True"/>
                                            <Condition Binding="{Binding SelectedInvoice.Status}" Value="Completed"/>
                                        </MultiDataTrigger.Conditions>
                                        <MultiDataTrigger.Setters>
                                            <Setter Property="Background" Value="#F39C12"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Opacity" Value="1"/>
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Setter Property="ToolTip" Value="إعادة عرض الأسعار المحدد إلى حالة المسودة للتعديل"/>
                                        </MultiDataTrigger.Setters>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- زر تصدير PDF للفاتورة المحددة -->
                    <Button Content="📄 تصدير عرض أسعار" 
                            Command="{Binding ExportPdfCommand}" 
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ExportButtonStyle}">
                                <Setter Property="Width" Value="200"/>
                                <Setter Property="Height" Value="36"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="Background" Value="#95A5A6"/>
                                <Setter Property="Cursor" Value="No"/>
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="IsEnabled" Value="False"/>
                                <Setter Property="ToolTip" Value="حدد عرض أسعار مكتمل أولاً"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SelectedInvoice, Converter={StaticResource NotNullConverter}}" Value="True"/>
                                            <Condition Binding="{Binding SelectedInvoice.Status}" Value="Completed"/>
                                        </MultiDataTrigger.Conditions>
                                        <MultiDataTrigger.Setters>
                                            <Setter Property="Background" Value="#3498DB"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Opacity" Value="1"/>
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Setter Property="ToolTip" Value="تصدير عرض الأسعار المحدد (PDF)"/>
                                        </MultiDataTrigger.Setters>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- زر تصدير PDF بدون أسعار -->
                    <Button Content="📄 تصدير بدون أسعار" 
                            Command="{Binding ExportPdfWithoutPricesCommand}" 
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ExportButtonStyle}">
                                <Setter Property="Width" Value="200"/>
                                <Setter Property="Height" Value="36"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Cursor" Value="No"/>
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="IsEnabled" Value="False"/>
                                <Setter Property="ToolTip" Value="حدد عرض أسعار مكتمل أولاً"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SelectedInvoice, Converter={StaticResource NotNullConverter}}" Value="True"/>
                                            <Condition Binding="{Binding SelectedInvoice.Status}" Value="Completed"/>
                                        </MultiDataTrigger.Conditions>
                                        <MultiDataTrigger.Setters>
                                            <Setter Property="Background" Value="#F39C12"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Opacity" Value="1"/>
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Setter Property="ToolTip" Value="تصدير عرض الأسعار المحدد بدون أسعار (PDF)"/>
                                        </MultiDataTrigger.Setters>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- ⭐ أزرار التصدير الجماعية على اليمين -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">

                    <!-- زر تصدير Excel للفواتير المفلترة -->
                    <Button Content="📥 تصدير عروض الأسعار Excel" 
                            Command="{Binding ExportExcelCommand}" 
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ExportButtonStyle}">
                                <Setter Property="Width" Value="200"/>
                                <Setter Property="Height" Value="36"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="Background" Value="#27AE60"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="IsEnabled" Value="True"/>
                                <Setter Property="ToolTip" Value="تصدير عروض الأسعار (سيطلب منك خيارات التصدير)"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CompletedInvoices.Count}" Value="0">
                                        <Setter Property="Background" Value="#95A5A6"/>
                                        <Setter Property="Cursor" Value="No"/>
                                        <Setter Property="Opacity" Value="0.6"/>
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="ToolTip" Value="لا توجد عروض أسعار للتصدير"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- زر طباعة PDF للفواتير المفلترة -->
                    <Button Content="🖨️ تصدير عروض الأسعار PDF" 
                            Command="{Binding PrintPdfCommand}" 
                            Margin="0,0,5,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ExportButtonStyle}">
                                <Setter Property="Width" Value="200"/>
                                <Setter Property="Height" Value="36"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="Background" Value="#9B59B6"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="IsEnabled" Value="True"/>
                                <Setter Property="ToolTip" Value="طباعة عروض الأسعار (سيطلب منك خيارات التصدير)"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CompletedInvoices.Count}" Value="0">
                                        <Setter Property="Background" Value="#95A5A6"/>
                                        <Setter Property="Cursor" Value="No"/>
                                        <Setter Property="Opacity" Value="0.6"/>
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="ToolTip" Value="لا توجد عروض أسعار للطباعة"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>